<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/abc_control_padding_material"
    android:layout_marginLeft="@dimen/abc_control_padding_material"
    android:layout_marginRight="@dimen/abc_control_padding_material"
    android:layout_marginTop="@dimen/abc_control_padding_material"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/photo_placeholder"
            android:transitionName="@string/transition_photo" />

        <TextView
            android:id="@+id/article_title"
            style="@style/ArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/listitem_vertical_padding_top"
            android:paddingLeft="@dimen/listitem_horizontal_padding"
            android:paddingRight="@dimen/listitem_horizontal_padding"
            android:paddingTop="@dimen/listitem_horizontal_padding"
            tools:text="An Empire State of Mind" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/ArticleSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/listitem_horizontal_padding"
            android:paddingLeft="@dimen/listitem_horizontal_padding"
            android:paddingRight="@dimen/listitem_horizontal_padding"
            tools:text="19. Juni 2013 by Ernest Hemingway" />
    </LinearLayout>

</android.support.v7.widget.CardView>
